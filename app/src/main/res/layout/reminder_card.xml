<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:id="@+id/reminderCardRel"
    android:visibility="gone">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTimePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="15dp"

        >


        <TimePicker
            android:id="@+id/timePicker1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />






    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/TimePickOk"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/cardViewTimePick"
        android:layout_alignEnd="@+id/cardViewTimePick"
        android:layout_marginTop="23dp"
        app:backgroundTint="@color/Green"
        android:background="@drawable/google_btn"
        android:text="Ok" />

    <Button
        android:id="@+id/TimePickCancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/cardViewTimePick"
        android:layout_alignStart="@+id/cardViewTimePick"
        app:backgroundTint="@color/colorRed"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_toStartOf="@+id/TimePickOk"
        android:layout_toLeftOf="@id/TimePickOk"
        android:background="@drawable/google_btn"
        android:text="Cancel" />
</RelativeLayout>